<Window x:Name="ServerIP1" x:Class="ScuffChat.ServerIP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScuffChat"
        mc:Ignorable="d"
        Title="ServerIP" Height="80" Width="235" WindowStyle="None" Background="{DynamicResource bg1}" Icon="/Icon.png">
    <Grid>
        <TextBox x:Name="ServerIPAddress" HorizontalAlignment="Center" Margin="0,23,0,0" Text="85.89.166.234" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Foreground="{DynamicResource acc1}" HorizontalContentAlignment="Center">
            <TextBox.Background>
                <SolidColorBrush Color="{DynamicResource bg2}" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="SetServerIPAddress" Content="Set" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" BorderBrush="#FF707070" Foreground="{DynamicResource acc1}" Click="SetServerIPAddress_Click">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource bg2}" Opacity="0.5"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
